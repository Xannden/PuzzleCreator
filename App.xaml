<Application x:Class="PuzzleCreator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PuzzleCreator.Converters"
             xmlns:vm="clr-namespace:PuzzleCreator.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:BoardCell}">
            <DataTemplate.Resources>
                <converters:CellTypeToImageConverter x:Key="CellToImage"/>
            </DataTemplate.Resources>
            <Image  Source="{Binding Type, Converter={StaticResource CellToImage}}"/>
        </DataTemplate>
    </Application.Resources>
</Application>